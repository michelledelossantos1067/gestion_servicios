<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nueva Deuda</title>
</head>
<body>
  <h1>Registrar Nueva Deuda</h1>
  <form action="/nuevaDeuda" method="POST">
    <input type="hidden" name="id_cliente" value="<%= id_cliente %>">
    <input type="hidden" name="id_empresa" value="<%= id_empresa %>">

    <label for="id_cliente">Seleccione Cliente:</label>
    <select id="id_cliente" name="id_cliente" required>
      <% clients.forEach(client => { %>
        <option value="<%= client.id_cliente %>"><%= client.nombre %></option>
      <% }); %>
    </select><br><br>

    <label for="id_empresa">Seleccione Empresa:</label>
    <select id="id_empresa" name="id_empresa" required>
      <% empresas.forEach(empresa => { %>
        <option value="<%= empresa.id_empresa %>"><%= empresa.nombreEmpresa %></option>
      <% }); %>
    </select><br><br>

    <label for="deuda">Deuda:</label>
    <input type="number" id="deuda" name="deuda" required><br><br>

    <button type="submit">Registrar Deuda</button>
  </form>
</body>
</html>
